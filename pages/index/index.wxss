/***********header begin***********/

.banner {
  width: 100%;
  display: block;
}

/***********header end***********/

/*************form************/
.tips ,.tips-long{
    margin: 48rpx 0 16rpx 0;
    height: 56rpx;
    font-size: 34rpx;
    background: url('https://zxcs.ggwan.com/forecastbazijingpibundle/images/new/new_tit_bg.png?timestamp=1495101963025') 0 0 no-repeat;
    text-align: center;
    line-height: 56rpx;
    background-size: 100%;
    color: #fff;
}
.tips-long {
     background-image: url('https://zxcs.ggwan.com/forecastbazijingpibundle/images/new/new_tit_bg_long.png');
}
.form {
  display: block;
}

.form-box {
  margin: 0rpx 24rpx;
  border: 1px solid #f29b76;
  border-radius: 12rpx;
  background-color: #fff;
}
.section {
  display: flex;
  border-top: 1px solid #f29b76;
  /*padding: 28rpx 0;*/
}

.section1 {
  border-top: none;
}

.sec-text-common {
  line-height: 1.4em;
  padding: 23rpx 30rpx 23rpx 23rpx;
  font-size: 34rpx;
  color: #8e8e8e;
}

.txtps {
  height: 4em;
  width: 100%;
  font-size: 34rpx;
  padding: 28rpx 0;
}

.sec-input-common {
  width: 486rpx;
  flex: 1 1 486rpx;
}

.picker {
  padding: 23rpx 0;
  font-size: 34rpx;
  /*color: #b3b3b3;*/
  line-height: 1.4em;
  position: relative;
}

