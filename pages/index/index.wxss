.radio-group {
  display: flex;
}

.radio-text {
  padding: 23rpx 0;
}

.radio {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio1 {
  margin-right: 60rpx;
}

.sort-box {
  width: 100%;
  height: 300px;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.agree {
    margin: 16rpx 24rpx;
    font-size: 28rpx;
}
.agree-tip {
    vertical-align: middle;
}
.sort-intro {
  margin: 0 28rpx 24rpx;
  font-size: 36rpx;
  color: #242424;
}

.sort-text-common {
  display: block;
  line-height: 58rpx;
  margin-bottom: 15rpx;
}

.intro-title::before {
  content: '\2748';
  /*display: inline-block;*/
}

.emphasis {
  color: #ff9104;
}

/******************reveal********************/
.reveal-banner {
    margin: 0 32rpx;
}
.reveal-type {
    display: flex;
    margin: 20rpx 32rpx 45rpx;
}
.type1,.type2,.type3 {
    width: 192rpx;
    flex: 1 1 192rpx;
    text-align: center;
}
.type2 {
    margin: 0 50rpx;
}
.reveal-names {
    color: #4d0224;
    font-size: 36rpx;
    font-weight: bold;
}
.reveal-infos {
    color: #a91c27;
    font-size: 28rpx;
}
.predict {
    width: 375rpx;
    margin: 16rpx auto 32rpx;
}

/******************feedback*******************/
.exp {
    display: flex;
    margin: 0 20rpx 10rpx;
    padding: 28rpx 20rpx;
    font-size: 30rpx;
    border: 1px solid #a91c27;
    background-color: #f9e5c8;
    border-radius: 12rpx;
    color: #a91c27;
}
.photo {
    width: 126rpx;
    flex: 1 1 126rpx;
    margin-right: 12rpx;
}
.desc {
    width: 540rpx;
    flex: 1 1 540rpx;
}

/**********************affect*************************/
.desc-title {
    font-size: 32rpx;
    font-weight: bold;
}
.intro {
    font-size: 30rpx;
    color: #a91c27;
    text-align: center;
    line-height: 46rpx;
}

/*********************avoid****************************/

.avoid-banner {
    margin: 0 32rpx;
}
.long {
    width: 675rpx;
}
/*******************immediate**********************/

.benefit {
    font-size: 30rpx;
    color: #a91c27;
    line-height: 46rpx;
    padding: 0 1em;
}

/*********************contact***********************/

.contact {
  line-height: 52rpx;
  font-size: 33rpx;
  color: rgb(248, 219, 146);
  background-color: rgb(148, 26, 26);
  text-align: center;
  padding: 26rpx 0;
}
.member {
  text-decoration: underline;
}
